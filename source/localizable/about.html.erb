    <div class="column width-6 push-6">
      <div class="hero-content split-hero-content">
        <div class="hero-content-inner left center-on-mobile horizon" data-animate-in="opacity:0;transX:50px;duration:1000ms;easing:easeIn;" data-threshold="0.4">
          <h3 class="mb-50"><%= t("about.section1.header") %></h3>
