<section class="section-block featured-media window-height tm-slider-parallax-container">
  <div class="tm-slider-container full-width-slider" data-featured-slider data-parallax data-parallax-fade-out data-scale-under="960">
    <ul class="tms-slides">
      <li class="tms-slide" data-image data-force-fit data-overlay-bkg-color="006c90" data-overlay-bkg-opacity="0.75">
        <div class="tms-content">
          <div class="tms-content-inner v-align-middle">
            <div class="row">
              <div class="column width-7 pd-20 left center-on-mobile">
                <h5 class="tms-caption text-uppercase weight-bold color-white mb-10"
                  data-animate-in="opacity:0;transY:-50;duration:900ms;delay:100ms;easing:easeFastSlow;"
                  data-no-scale
                ><%= t("about.intro.motto") %></h5>
                <div class="clear"></div>
                <h1 class="tms-caption title-xlarge text-uppercase lspacing-medium weight-bold color-white mb-10"
                  data-animate-in="opacity:0;transY:-50;duration:900ms;delay:300ms;easing:easeFastSlow;"
                  data-no-scale
                ><%= t("about.intro.header") %></h1>
                <div class="clear"></div>
                <p class="tms-caption font-alt-1 text-medium weight-light color-white hide-on-mobile mb-30"
                  data-animate-in="opacity:0;transY:-50;duration:900ms;delay:500ms;easing:easeFastSlow;"
                  data-no-scale
                ><%= t("about.intro.subheader") %></p>
                <div class="clear"></div>
              </div>
            </div>
          </div>
        </div>
        <img data-src="images/about/about_slide1.jpg" data-retina src="images/blank.png" alt=""/>
      </li>
    </ul>
  </div>
</section>
<!-- Fullscreen Slider Section End -->

