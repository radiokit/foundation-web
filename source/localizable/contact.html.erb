<section class="section-block bkg-charcoal replicable-content contact-2">
    <div class="row">
      <div class="column width-8 offset-2 center">
        <br><br><br><br>
        <h2 class="mb-30 color-white"><%= t("contact.header") %></h2>
        <p class="lead color-white"><%= t("contact.line1") %></p>

        <div class="contact-form-container">
          <form action="https://formspree.io/info@radiokit.org"
                method="POST"
                target="_blank">
            <div class="row">
              <div class="column width-6">
                <input type="text" name="name" class="form-fname form-element large" placeholder="<%= t("contact.name") %>" tabindex="1" required>
              </div>
              <div class="column width-6">
                <input type="email" name="email" class="form-email form-element large" placeholder="<%= t("contact.mail") %>" tabindex="3" required>
              </div>
            </div>
            <div class="row">
              <div class="column width-12 center">
                <textarea name="message" class="form-message form-element large" placeholder="<%= t("contact.message") %>" tabindex="5" required></textarea>
                <input type="submit" value="Send Email" class="form-submit button medium bkg-black bkg-hover-pink color-white color-hover-white">
              </div>
            </div>
          </form>
          <div class="form-response center"></div>
        </div>
      </div>
    </div>
  </section>

